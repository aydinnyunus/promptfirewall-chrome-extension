{
  "name": "Prompt Firewall: LLM Data Leak Prevention",
  "description": "LLM Data Leak Prevention (DLP) : Safeguard Sensitive Information and Protect Your Privacy",
  "version": "0.0.17",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chat.deepseek.com/*"
  ],
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.deepseek.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.deepseek.com/*"
      ],
      "resources": [
        "style.css"
      ]
    }
  ]
}
